{
    "openapi":"3.0.2",
    "info": {
      "title":"Category RESTful API",
      "description": "API Spec for Category RESTful API",
      "version":"1.0.0"
    },
    "servers": [
      {"url":"http://localhost:3000/api"}
    ],
    "paths": {
        "/categories":{
            "get": {
                "security": [{
                    "CategoryAuth":[]
                }],
                "tags": ["Category API"],
                "summary": "List All Categories",
                "description": "List All Categories",
                "responses": {
                    "200":{
                        "description": "Success Get All Categories",
                        "content": {
                            "aplication/json":{
                                "schema":{
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status":{
                                            "type": "string"
                                        },
                                        "data":{
                                            "type": "array",
                                            "items": {
                                                
                                                "$ref": "#/components/schemas/Category"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post":{
                "security": [{
                    "CategoryAuth":[]
                }],
                "tags": ["Category API"],
                "summary": "Create New Category",
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrUpdateCategory"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success Create Category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Category"
                                        }
                                    }
                                }
                            }
                        }
                    }

                }
            }
        },
